<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <title>Live Score</title>

    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        /* HALAMAN AWAL */
        #halamanAwal {
            height: 100vh;
            background: #0f2027;
            background: linear-gradient(to right, #2c5364, #203a43, #0f2027);
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        #halamanAwal button {
            padding: 12px 25px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 20px;
        }

        /* MENU UTAMA */
        #menuUtama {
            display: none;
        }

        nav {
            background: #222;
            padding: 15px;
        }

        nav a {
            color: white;
            text-decoration: none;
            margin-right: 20px;
        }

        nav a:hover {
            text-decoration: underline;
        }

        .konten {
            padding: 20px;
        }
    </style>
</head>
<body>

<!-- HALAMAN AWAL -->
<div id="halamanAwal">
    <h1>Live Score Website</h1>
    <p>Klik masuk untuk melihat menu utama</p>
    <button onclick="masuk()">Masuk</button>
</div>

<!-- MENU UTAMA -->
<div id="menuUtama">
    <nav>
        <a href="#">Home</a>
        <a href="#">Live Score</a>
        <a href="#">Jadwal</a>
        <a href="#">Kontak</a>
    </nav>

    <div class="konten">
        <h2>Menu Utama</h2>
        <p>Selamat datang di halaman utama Live Score.</p>
    </div>
</div>

<script>
    function masuk() {
        document.getElementById("halamanAwal").style.display = "none";
        document.getElementById("menuUtama").style.display = "block";
    }
</script>

</body>
</html>
